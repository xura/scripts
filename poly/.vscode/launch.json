    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "node",
            "request": "launch",
            "args": [
                "-r",
                "ts-node/register",
                "${workspaceFolder}/run.ts"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
        },
        {
            "name": "Run webpack",
            "type": "node",
            "request": "launch",
            "args": [
                "-r",
                "ts-node/register",
                "${workspaceFolder}/commands/run-webpack.ts",
                "./index.js",
                "project1"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
        }
    ]
}
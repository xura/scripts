    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "zod deploy",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "deploy"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "zod deploy:create-staging-url",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "deploy:create-staging-url",
                "v0.0.42"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "zod deploy:clean",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "deploy:clean",
                "staging"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--grep",
                "retries the given amount of attempts and shows the correct message"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}